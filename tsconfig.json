{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "verbatimModuleSyntax": false,
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["packages/**/*.ts"]
}
